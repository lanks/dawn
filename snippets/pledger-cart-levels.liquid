	<div>
      
      <div class="grid-wrapper">
        <div class="grid-columns">
          <div class="grid-col">
        	<strong>Shop and Give</strong>
          </div>
          <div class="grid-col">
			<strong>£50</strong>
                <div class="progress-bar-wrapper">
                  <div class="progress-bar">&nbsp;</div>
                </div>
                <strong>£200</strong>
            </div>
          </div>
        </div>
        <div class="grid-columns">
          <div class="text-col">
            <p>
                When you spend <b>£200</b> or more we will give you <b>£20</b> to donate to a cause with impact.
            </p>
          </div>
          {%- for cause in shop.metafields.pledger.causes -%}
            <div class="grid-col">
              <img src="{{cause.image_url}}" />
              <p>{{ cause.name }}</p>
            </div>
          {%- endfor -%}
        </div>  
      </div>
	</div>