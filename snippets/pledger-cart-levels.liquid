
    <style>
    .grid-wrapper {
      display: flex;
      flex-direction:column;
      margin: 1em;
      background-color: white;
      flex-wrap: nowrap;
      align-content:space-between;
      gap:1%;
      background-color: {{section.settings.background_color}};
      border-radius: 5px;
    }
      .grid-wrapper strong {
      padding-left:20px;
      padding-top:20px;
    }
    .grid-columns {
       display: flex;
      flex-direction:row;
    }
	.text-col {
    	display:flex;
      flex-grow: 1;
      flex-basis: 0;
      padding: 20px;
    }
    .grid-col {
      
      display: flex;
      justify-content: start;
      flex-direction:row;
      padding-bottom: 20px;
      padding-left: 20px;
      padding-right:20px;
      color: {{section.settings.text_color}};
      line-height: 1;
      
      flex-grow: 1;
      flex-basis: 0;
      align-items: center; 
    }
    .grid-col img, .grid-col p {
      display:inline-block;
    }
    .grid-col img {
      object-fit: contain;
      width:100px;
      height:100px;
    }
    .progress-bar-wrapper {
      border: 1px solid {{ section.settings.text_color }};
      border-radius:4px;
      width:100%;
    }
    .progress-bar {
      background-color: {{ section.settings.text_color }};
      width:50%;
            height:20px;
    }
